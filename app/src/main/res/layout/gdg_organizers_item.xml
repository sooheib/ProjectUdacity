<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/organizer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardview_margin_top"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/no_event_text" />

    <TextView
        android:id="@+id/organizer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardview_margin_top"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/organizer_gdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardview_margin_top"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorAccent" />

    <View
        android:id="@+id/divider"
        style="@style/Divider"
        android:layout_marginTop="@dimen/textview_margin_top" />

</LinearLayout>